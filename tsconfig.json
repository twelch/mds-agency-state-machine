{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["@types/*", "*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
